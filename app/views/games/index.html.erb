<h1>Jeu du corbeau</h1>

<% @games.each do |game| %>
      <div>
        <button type='button' class="btn btn-link btn-lg active"><%=link_to "play test" + game.id.to_s, game %></button>
      </div>
<% end %>

<br>
<% if @prec_is_possible %>
      <button type='button' class="btn btn-default btn-lg active"> <%= link_to "Jeux précédents",  root_path(:page => params[:page].to_i-1)%> </button>
<% end %>
<% if @succ_is_possible %>
  <button type='button' class="btn btn-default btn-lg active"><%= link_to  "Jeux suivants",  root_path(:page => params[:page].to_i+1)%> </button>
<% end %>

